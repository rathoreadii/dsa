class Solution {
public:
    bool isPalindrome(int x) {
        double rev= 0;
        if(x < 0)
            return false;

        int n= x;
        while(n){
            int d= n%10;
            rev= rev * 10 + d;
            n/= 10;
        }

        if(rev == x)
            return true;
        else
            return false;
    }
};
