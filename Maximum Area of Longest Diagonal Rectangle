class Solution {
public:
    int areaOfMaxDiagonal(vector<vector<int>>& dimensions) {
        int maxDsq= INT_MIN;
        int maxArea= 0;

        for(auto& rect: dimensions){
            int len= rect[0];
            int wid= rect[1];
            int diaSq= (len * len) + (wid * wid);
            int area= len * wid;

            if(diaSq > maxDsq){
                maxDsq= diaSq;
                maxArea= area;
            }
            else if(diaSq == maxDsq){
                maxArea= max(maxArea, area);
            }
        }

        return maxArea;
    }
};
