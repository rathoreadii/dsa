class Solution {
public:
    bool isValid(string s) {
        int len= s.length();

        if(len % 2)
            return false;
        
        stack<char> st;
        for(auto c: s){
            if(c == '(' || c == '{' || c == '['){
                st.push(c);
            }
            else{
                if(st.size() && c == ')' && st.top() == '('){
                    st.pop();
                }
                else if(st.size() && c == '}' && st.top() == '{'){
                    st.pop();
                }
                else if(st.size() && c == ']' && st.top() == '['){
                    st.pop();
                }
                else{
                    return false;
                }
            }
        }

        if(st.size()){
            return false;
        }
        else{
            return true;
        }
    }
};
